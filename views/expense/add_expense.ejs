<%- include("../partials/_header.ejs") %>

<div class="container col-18 text-center">
  <div class="row justify-content-center">
    <section class="content">
      <header id="header">
        <nav>
          <h1>Add Expenses</h1>
        </nav>
      </header>

      <br />

      <h3>Expenses</h3>
      <span>Use the below form to add expense details</span>

      <form
        action="/expense/add"
        method="POST"
        class="row g-3 align-items-center"
      >
        <div class="new_expense">
          <div class="col-md-4">
            <label for="date" class="col-form-label">Date: </label>
            <input
              type="date"
              data-date=""
              data-date-format="DD MMMM YYYY"
              name="date"
              class="form-control"
              required
            />
          </div>
          <br />
          <div class="col-md-4">
            <label for="amount" class="form-label">Amount: </label>
            <div class="input-group mb-3">
              <span class="input-group-text">RM</span>
              <input
                type="number"
                step="0.01"
                name="amount"
                value=""
                class="form-control"
                required
              />
            </div>
          </div>
          <div class="col-md-4">
            <label for="category" class="form-label">Category: </label>
            <input
              type="text"
              name="category"
              list="category"
              value=""
              class="form-control"
              required
            />
            <datalist id="category">
              <option value="Food"></option>
              <option value="Personal"></option>
              <option value="Shopping"></option>
              <option value="Gifts"></option>
              <option value="Travel"></option>
              <option value="Health/Medical"></option>
              <option value="Transportation"></option>
            </datalist>
          </div>
          <div class="col-10">
            <label for="descp" class="form-label">Descriptions: </label>
            <input
              rows="3"
              type="text"
              name="descriptions"
              value=""
              placeholder="Descriptions"
              class="form-control"
              required
            />
          </div>
          <br /><br />
          <div>
            <button type="submit" class="btn btn-success">Save</button>
          </div>
        </div>
      </form>

      <br /><br />
    </section>
  </div>
</div>

<%- include("../partials/_footer.ejs") %>
