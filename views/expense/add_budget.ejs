<%- include("../partials/_header.ejs") %>

<div class="container col-18 text-center">
  <div class="row justify-content-top">
    <section class="content">
      <header id="header">
        <nav>
          <h1>Add Budget</h1>
        </nav>
      </header>

      <br />

      <h3>Budget</h3>
      <span>Please add your budget details</span>

      <form
        action="/budget/add"
        method="POST"
        class="row g-3 align-items-center"
      >
        <div class="budget">
          <div class="col-md-4">
            <label for="budget" class="col-form-label">Budget: </label>
            <div class="input-group mb-3">
              <span class="input-group-text">RM</span>
              <input
                type="number"
                step="0.01"
                name="budget"
                value=""
                class="form-control"
                required
              />
            </div>
          </div>
          <div>
            <button type="submit" class="btn btn-success">Save</button>
          </div>
        </div>
      </form>

      <br /><br />

      <br /><br />
    </section>
  </div>
</div>

