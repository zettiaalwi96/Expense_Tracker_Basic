<%- include("../partials/_header.ejs") %>

<div class="container col-18 text-center">
  <div class="row justify-content-center">
    <section class="content">
      <header id="header">
        <nav>
          <h1>Update Budget</h1>
        </nav>
      </header>

      <br />

      <h3>Budget</h3>
      <span>Please update your budget details</span>

      <br /><br />

      <h4>Your current budget is: RM <%= budget.budget %></h4>

      <form action="/budget/update/<%= budget.id %>?_method=PUT" method="POST" class="row g-3 align-items-center">
        
        <div class="budget">
          <div class="col-md-4">
            <label for="budget" class="col-form-label">Budget: </label>
            <div class="input-group mb-3">
            <span class="input-group-text">RM</span>
            <input
              type="number"
              step="0.01"
              name="budget"
              value="<%= budget.budget %>"
              class="form-control"
              required/>
          </div>
          </div>
          <div>
            <button type="submit" class="btn btn-success">Update</button>
          </div>
        </div>
      </form>

      <br /><br />
    </section>
  </div>
</div>

<%- include("../partials/_footer.ejs") %>